// adjusted to be alittle darker, not harsh white, changed name to Whitemode

mdl 1.5;
import ::anno::*;
import ::df::diffuse_reflection_bsdf;
import ::state::normal;

export material WhiteMode(

	color diffuse_color_constant = color(.99f)
	[[
		anno::display_name("Base Color"),
		anno::description("This is the base color")
	]]
)
 = 
    let {
        material_surface surface(
            ::df::diffuse_reflection_bsdf(diffuse_color_constant));
    } in material(
            thin_walled: false,
            surface: surface);
